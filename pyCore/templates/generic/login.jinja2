{% extends 'base.jinja2' %}
{% import 'dashboard/macros/form.jinja2' as form %}

{% block titlesection %}{{ _('Sign in') }}{% endblock titlesection %}

{% block css %}
    {% cssresource request,'stock','style' %}
{% endblock css %}

{% block topScripts %}
    {% jsresource request,'stock','bootstrap' %}
{% endblock topScripts %}

{% block bodyclass %}gray-bg{% endblock bodyclass %}

{% block body %}
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            {% block logginlogo %}
                <div>
                    <h1 class="logo-name">PyQ</h1>
                </div>
            {% endblock logginlogo %}
            {% block loginwelcome %}
                <h3>{{ _('PyQore Login') }}</h3>
            {% endblock loginwelcome %}
            {% block logingheadmsg %}
                <p>{{ _('Sign in') }}</p>
            {% endblock logingheadmsg %}
            {% block login_errors %}
                {{ form.display_errors(errors) }}
            {% endblock login_errors %}
            {% block loginform %}
                <form class="m-t" role="form" method="post" action="{{ request.url }}">
                    {{ form.secure_form(request) }}
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="{{ _('Email address') }}" required="">
                    </div>
                    <div class="form-group">
                        <input type="password" name="passwd" class="form-control" placeholder="{{ _('Password') }}" required="">
                    </div>
                    {% block login_extra %}

                    {% endblock login_extra %}
                    <button type="submit" class="btn btn-primary block full-width m-b">{{ _('Sign in') }}</button>
                </form>
            {% endblock loginform %}
            {% block login_tools %}

            {% endblock login_tools %}
            {% block copyright %}
                <p class="m-t"> <small>PyQore &copy; 2019 </small> </p>
            {% endblock copyright %}
        </div>
    </div>
    {% block scripts %}

    {% endblock scripts %}
{% endblock body %}